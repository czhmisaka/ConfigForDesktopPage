{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": false,
		"suppressImplicitAnyIndexErrors": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"strictFunctionTypes": false,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"incremental": true,
		"types": [
			"vite/client",
			"webpack-env",
			"node",
			"element-plus/global",
			"@pureadmin/table/volar",
			"unplugin-vue-define-options",
			"@pureadmin/descriptions/volar",
		],
		"paths": {
			"@/*": ["src/*"],
			"@build/*": ["build/*"],
			"/#/*": ["types/*"]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"typeRoots": ["./node_modules/@types/", "./types","./src/modules/","*/types.ts"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/*.d.ts",
		"mock/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"config/proxyTable.ts",
		"types/*.d.ts", "src/components/basicComponents/grid/helpers/utils.js",
	],
	"exclude": [
		"node_modules"
	]
}